<div style="position: fixed; top: 20px; left: 50%; transform: translateX(-50%); z-index: 1050;">
  <% flash.each do |message_type, message| %>
    <div class="toast show align-items-center text-white bg-<%= message_type == 'notice' ? 'primary' : 'danger' %>" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          <%= message %>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  <% end %>
</div>
