<div class="container h-100">
  <div class="row h-100 mt-5 justify-content-center align-items-center">
    <div class="col mt-5 d-flex align-items-center justify-content-center flex-grow-1">
      <div class="card mt-5">
        <%= form_with model: resource, html: { class: 'needs-validation', novalidate: true } do |form| %>
          <div class="card-body my-3 mx-5">
            <% fields.each do |field| %>
              <div class="form-group mb-4">
                <div class="row">
                  <div class="col-md-4">
                    <%= form.label field[:name], class: 'control-label mb-2' %>
                  </div>
                  <div class="col-md-8">
                    <% if field[:field_type] == :collection_select %>
                      <%= form.collection_select field[:name], field[:options][:collection], field[:options][:value_method], field[:options][:text_method], { prompt: 'Select an option' }, class: 'form-control form-control-lg' %>
                    <% elsif field[:field_type] == :check_box %>
                      <%= form.check_box field[:name], { class: 'form-control form-check-input' }.merge(field[:options] || {}) %>
                    <% else %>
                      <%= form.send field[:field_type], field[:name], { class: 'form-control form-control-lg' }.merge(field[:options] || {}) %>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <div class="card-footer d-flex justify-content-end">
            <div class="actions">
              <%= form.submit "Submit", class: "btn btn-outline-primary" %>
              <%= link_to "Cancel", cancel_path, class: "btn btn-outline-warning" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
