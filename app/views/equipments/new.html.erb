<%= render partial: "shared/top_bar", locals: {
  session: current_user,
} %>

<div class="container h-100">
  <div class="row h-100 mt-5 justify-content-center align-items-center">
    <div class="col mt-5 d-flex align-items-center justify-content-center">
      <div class="card mt-5">
        <%= form_with model: @equipment, local: true, html: { class: 'needs-validation', novalidate: true } do |form| %>
          <div class="card-body mx-5 my-3">
            <div class="form-group mb-4">
              <div class="row">
                <div class="col-md-4">
                  <%= form.label :name, class: 'control-label mb-2' %>
                </div>
                <div class="col-md-8">
                  <%= form.text_field :name, class: 'form-control form-control-lg' %>
                </div>
              </div>
            </div>
            <div class="form-group mb-4">
              <div class="row">
                <div class="col-md-4">
                  <%= form.label :description, class: 'control-label mb-2' %>
                </div>
                <div class="col-md-8">
                  <%= form.text_area :description, class: 'form-control form-control-lg' %>
                </div>
              </div>
            </div>
            <div class="form-group mb-4">
              <div class="row">
                <div class="col-md-4">
                  <%= form.label :is_broken, class: 'control-label mb-2' %>
                </div>
                <div class="col-md-8">
                  <%= form.check_box :is_broken, class: 'form-control form-control-lg' %>
                </div>
              </div>
            </div>
            <div class="form-group mb-4">
              <div class="row">
                <div class="col-md-4">
                  <%= form.label :location, class: 'control-label mb-2' %>
                </div>
                <div class="col-md-8">
                  <%= form.collection_select :location, Equipment.location.keys, :to_s, :humanize, { prompt: 'Select an option' }, class: 'form-control form-control-lg' %>
                </div>
              </div>
            </div>
          </div>
          <div class="card-footer d-flex justify-content-end">
            <div class="actions">
              <%= form.submit "Submit", class: "btn btn-outline-primary" %>
              <%= link_to "Cancel", root_path, class: "btn btn-outline-warning" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
